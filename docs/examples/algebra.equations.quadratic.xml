<examples exerciseid="algebra.equations.quadratic">
  <diagnose before="x^2 == 2" after="x == sqrt 2" description="negatieve wortel vergeten"/>
  <diagnose before="x^2+1 == 9" after="x+1 == 3 or x+1 == -3" description="worteltrekken alvast gedaan"/>
  <diagnose before="9*x^2 == 81" after="x == 9 or x == -9" description="factor voor x^2 is vergeten"/>
  <diagnose before="9*x^2 == 81" after="9*x == 9 or 9*x == -9" description="worteltrekken alvast gedaan"/>
  <diagnose before="2*x^2 == 8" after="x^2 == 16" description="vermenigvuldigen ipv delen"/>
  <diagnose before="(x+2)^2 == 5" after="x^2+4 == 5" description="distributie van machtsverheffen verkeerd"/>
  <diagnose before="(x+2)^2 == 5" after="x^2+2 == 5" description="distributie van machtsverheffen verkeerd"/>
  <diagnose before="9*x^2 == 81" after="(9*x)^2 == 81" description="verkeerde term kwadrateren"/>
  <diagnose before="x^2 == -17" after="x == sqrt (-17) or x == sqrt 17" description="negatieve wortel, en raar met mintekens"/>
  <diagnose before="2*x == -1+sqrt 6" after="x == -1/2+sqrt 6" description="vergeten om ook de wortel te delen"/>
  <diagnose before="(7*x+7)^2 == 7" after="(x+1)^2 == 1" description="allerlei termen delen"/>
  <diagnose before="x^2 == 5*x" after="x == 5" description="delen door x"/>
  <diagnose before="x*(x-5) == 0" after="x == 5" description="oplossing x=0 vergeten"/>
  <diagnose before="x*(x-6) == 0" after="x == 0 or x == -6" description="min-teken fout in een factor"/>
  <diagnose before="x*(x+6) == 0" after="x == 0 or x == 6" description="min-teken fout in een factor"/>
  <diagnose before="3*x^2-6*x == 0" after="3*x*(x-6) == 0" description="uit 6 moet ook factor 3 gehaald worden"/>
  <diagnose before="-2*x^2+3*x == 0" after="-x*(2*x+3) == 0" description="min-teken fout"/>
  <diagnose before="x^2-2*x-3 == 0" after="(x-1)*(x+3) == 0" description="plus en min omgedraaid"/>
  <diagnose before="x*(x-1) == 30" after="x == 30 or x-1 == 30" description="factoren gelijkstellen aan rechterkant"/>
  <diagnose before="x^2+8*x-15 == 0" after="x == (-8+sqrt 124)/2" description="tweede oplossing bij abc-formule"/>
