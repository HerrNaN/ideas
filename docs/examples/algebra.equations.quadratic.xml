  <diagnose before="(3*x+5)^2 == 5" after="3*x^2+30*x+25 == 5" description="3 niet mee kwadrateer"/>
  <diagnose before="(x-5)^2 == 7" after="x^2-10*x-25 == 7" description="min teken bij constante term"/>
  <diagnose before="(x+1)^2 == 0" after="x == 1 or x == -1" description="op twee oplossingen willen uitkomen"/>
  <diagnose before="4*(10-x^2) == -2*x*(2*x+10)" after="40-4*x^2 == -4*x^2-20" description="factor x vergeten aan het einde van de rechterkant"/>
  <diagnose before="3*(x-2)*(x+6) == 12*x" after="(3*x-6)*(3*x+18) == 12*x" description="distributie keer over keer"/>
  <diagnose before="(x-7/2)^2 == 2*(x+4)" after="x^2-7*x+49/2 == 2*(x+4)" description="vergeten om de noemer ook de kwadrateren"/>
</examples>
