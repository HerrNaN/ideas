%format :*: = "\mathbin{\times}"
%format :+: = "\mathbin{+}"
%format :-: = "\mathbin{-}"
%format :/: = "\mathbin{/}"

%format Lambda a (b) = "\lambda "a" . " b
%format power a b = a"^{"b"}"

%format Var a = a
%format Con a = a

%format _0    = "x"
%format _1    = "y"
%format _2    = "z"
%format _3    = "u"
%format _4    = "v"
%format _5    = "w"